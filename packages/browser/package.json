{
  "name": "@itwin/browser-authorization",
  "version": "0.5.1",
  "description": "Browser authorization client for iTwin platform",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "typings": "lib/cjs/index",
  "scripts": {
    "build": "npm run -s build:cjs && npm run -s build:esm",
    "build:cjs": "tsc 1>&2 --outDir lib/cjs",
    "build:esm": "tsc 1>&2 --module ES2020 --outDir lib/esm",
    "clean": "rimraf lib .rush/temp/package-deps*.json",
    "lint": "eslint -f visualstudio \"./src/**/*.ts\" 1>&2",
    "lint:fix": "npm run lint -- --fix",
    "start:httpserver": "http-server -p 3000 -a localhost",
    "start:webserver": "cross-env DISABLE_NEW_JSX_TRANSFORM=true SKIP_PREFLIGHT_CHECK=true BROWSER=none USE_FULL_SOURCEMAP=true DISABLE_ESLINT_PLUGIN=true TRANSPILE_DEPS=false USE_FAST_SASS=true DISABLE_TERSER=true react-scripts start",
    "test": "npm run test:node && npm run test:playwright",
    "test:node": "mocha \"./lib/cjs/test/node/**/*.test.js\"",
    "test:playwright": "npx playwright test --config=src/test/utils/playwright.config.ts",
    "test:playwright:httpserver": "http-server -p 3000 && npx playwright test --config=src/test/utils/playwright.config.ts",
    "test:playwright:webserver": "npm run start:webserver && npx playwright test --config=src/test/utils/playwright.config.ts",
    "test:playwright:console": "cross-env PWDEBUG=console; npx playwright test --config=src/test/utils/playwright.config.ts",
    "cover": "nyc npm test",
    "pack": "npm pack",
    "rebuild": "npm run clean && npm run build"
  },
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/auth-clients"
  },
  "dependencies": {
    "oidc-client-ts": "^2.2.0"
  },
  "devDependencies": {
    "@itwin/build-tools": "^3.0.0",
    "@itwin/core-bentley": "^3.0.0",
    "@itwin/core-common": "^3.0.0",
    "@itwin/eslint-plugin": "^3.0.0",
    "@playwright/test": "^1.30.0",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^8.2.3",
    "@types/node": "14.14.31",
    "@types/sinon": "^10.0.13",
    "chai": "^4.2.22",
    "cross-env": "^5.1.4",
    "eslint": "^7.32.0",
    "http-server": "14.1.1",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "playwright": "^1.30.0",
    "rimraf": "^3.0.2",
    "sinon": "^15.0.1",
    "typescript": "~4.3.5"
  },
  "peerDependencies": {
    "@itwin/core-bentley": "^3.0.0"
  },
  "eslintConfig": {
    "plugins": [
      "@itwin"
    ],
    "extends": "plugin:@itwin/itwinjs-recommended",
    "rules": {
      "no-duplicate-imports": "off",
      "@typescript-eslint/consistent-type-imports": "error"
    }
  }
}