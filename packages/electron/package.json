    "username": "^5.1.0"
  },
  "devDependencies": {
    "@itwin/core-common": "nightly",
    "@itwin/build-tools": "nightly",
    "@itwin/eslint-plugin": "nightly",
    "@itwin/core-geometry": "nightly",
