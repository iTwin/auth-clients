{
  "name": "@itwin/electron-authorization",
  "version": "0.8.4",
  "description": "Electron authorization client for iTwin platform",
  "scripts": {
    "build": "npm run -s build:cjs",
    "build:cjs": "tsc 1>&2 --outDir lib/cjs",
    "clean": "rimraf lib .rush/temp/package-deps*.json",
    "lint": "eslint -f visualstudio \"./src/**/*.ts\" 1>&2",
    "lint:fix": "npm run lint -- --fix",
    "test": "mocha \"./lib/cjs/test/**/*.test.js\"",
    "cover": "nyc npm test",
    "pack": "npm pack",
    "rebuild": "npm run clean && npm run build"
  },
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/auth-clients"
  },
  "dependencies": {
    "@openid/appauth": "^1.3.1",
    "keytar": "^7.8.0",
    "open": "^8.3.0",
    "username": "^5.1.0"
  },
  "devDependencies": {
    "@itwin/build-tools": "^3.0.0",
    "@itwin/core-bentley": "^3.0.0",
    "@itwin/core-common": "^3.0.0",
    "@itwin/eslint-plugin": "^3.0.0",
    "@types/chai": "^4.2.22",
    "@types/chai-as-promised": "^7",
    "@types/mocha": "^8.2.3",
    "@types/sinon": "^9.0.0",
    "chai": "^4.2.22",
    "chai-as-promised": "^7",
    "electron": "^17.0.0",
    "source-map-support": "^0.5.9",
    "eslint": "^7.32.0",
    "mocha": "^8.2.3",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.0",
    "typescript": "~4.3.5"
  },
  "peerDependencies": {
    "@itwin/core-bentley": "^3.0.0",
    "electron": ">=14.0.0 <18.0.0"
  },
  "eslintConfig": {
    "plugins": [
      "@itwin"
    ],
    "extends": "plugin:@itwin/itwinjs-recommended",
    "rules": {
      "no-duplicate-imports": "off",
      "@typescript-eslint/consistent-type-imports": "error"
    }
  }
}
