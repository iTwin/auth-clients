    "chai-as-promised": "^7",
    "electron": "^14.2.0",
    "source-map-support": "^0.5.9",
    "eslint": "^7.32.0",
    "mocha": "^8.2.3",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.0",
