{
  "name": "@itwin/oidc-signin-tool",
  "version": "3.5.0",
  "description": "OIDC Signin Helper",
  "main": "lib/cjs/index.js",
  "typings": "lib/cjs/index",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/itwin/auth-clients/tree/main/packages/oidc-signin-tool"
  },
  "scripts": {
    "build": "tsc 1>&2 --outDir lib/cjs",
    "clean": "rimraf lib .rush/temp/package-deps*.json",
    "lint": "eslint -f visualstudio \"./src/**/*.ts\" 1>&2",
    "lint:fix": "npm run lint -- --fix",
    "test": "mocha \"./lib/cjs/test/**/*.test.js\"",
    "test:integration": "mocha \"./lib/cjs/test-integration/**/*.test.js\"",
    "docs": "",
    "cover": "nyc npm test",
    "pack": "npm pack",
    "rebuild": "npm run clean && npm run build"
  },
  "keywords": [
    "Bentley",
    "BIM",
    "iModel",
    "OIDC"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "dependencies": {
    "@itwin/certa": "^3.3.0",
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0",
    "openid-client": "^4.7.4",
    "puppeteer": "^13.5.2"
  },
  "devDependencies": {
    "@itwin/build-tools": "^3.3.0",
    "@itwin/core-bentley": "^3.3.0",
    "@itwin/core-common": "^3.3.0",
    "@itwin/eslint-plugin": "^3.3.0",
    "@types/chai": "^4.2.22",
    "@types/chai-as-promised": "^7",
    "@types/mocha": "^8.2.3",
    "@types/node": "14.14.31",
    "@types/sinon": "^10.0.13",
    "chai": "^4.2.22",
    "chai-as-promised": "^7",
    "eslint": "^7.32.0",
    "mocha": "^8.2.3",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^15.0.1",
    "typescript": "~4.3.5"
  },
  "peerDependencies": {
    "@itwin/core-bentley": "^3.3.0"
  },
  "eslintConfig": {
    "plugins": [
      "@itwin"
    ],
    "extends": "plugin:@itwin/itwinjs-recommended",
    "rules": {
      "no-duplicate-imports": "off",
      "@typescript-eslint/consistent-type-imports": "error"
    }
  }
}
