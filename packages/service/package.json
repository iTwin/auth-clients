{
  "name": "@itwin/service-authorization",
  "version": "0.6.1",
  "description": "Service authorization client for iTwin platform",
  "main": "lib/cjs/index.js",
  "typings": "lib/cjs/index",
  "scripts": {
    "build": "tsc 1>&2",
    "lint": "eslint -f visualstudio \"./src/**/*.ts\" 1>&2",
    "lint:fix": "npm run lint -- --fix",
    "test": "mocha \"./lib/cjs/test/**/*.test.js\"",
    "test:integration": "",
    "cover": "nyc npm test",
    "clean": "rimraf lib .rush/temp/package-deps*.json",
    "pack": "npm pack",
    "rebuild": "npm run clean && npm run build"
  },
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/auth-clients"
  },
  "dependencies": {
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^2.0.4",
    "openid-client": "^4.7.4"
  },
  "devDependencies": {
    "@itwin/build-tools": "^3.0.0",
    "@itwin/core-bentley": "^3.0.0",
    "@itwin/core-common": "^3.0.0",
    "@itwin/eslint-plugin": "^3.0.0",
    "@types/chai": "^4.2.22",
    "@types/chai-as-promised": "^7",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/mocha": "^8.2.3",
    "@types/sinon": "^9.0.0",
    "eslint": "^7.32.0",
    "chai": "^4.2.22",
    "chai-as-promised": "^7",
    "mocha": "^8.2.3",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.0",
    "source-map-support": "^0.5.9",
    "typescript": "~4.3.5"
  },
  "peerDependencies": {
    "@itwin/core-bentley": "^3.0.0"
  },
  "eslintConfig": {
    "plugins": [
      "@itwin"
    ],
    "extends": "plugin:@itwin/itwinjs-recommended",
    "overrides": [
      {
        "files": [
          "src/test/Introspection.test.ts"
        ],
        "rules": {
          "@typescript-eslint/dot-notation": [
            "error",
            {
              "allowPrivateClassPropertyAccess": true
            }
          ],
          "dot-notation": "off"
        }
      }
    ],
    "rules": {
      "no-duplicate-imports": "off",
      "@typescript-eslint/consistent-type-imports": "error"
    }
  }
}
