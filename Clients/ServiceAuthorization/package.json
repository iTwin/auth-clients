{
  "name": "@itwin/service-authorization",
  "version": "1.0.0",
  "description": "Service authorization client for iTwin platform",
  "main": "lib/index.js",
  "typings": "lib/index",
  "scripts": {
    "build": "tsc 1>&2",
    "lint": "eslint -f visualstudio \"./src/**/*.ts\" 1>&2",
    "test": "betools test --grep=\"#integration\" --invert",
    "cover": "nyc npm test"
  },
  "author": "Bentley Systems, Inc. (http://www.bentley.com)",
  "license": "MIT",
  "dependencies": {
    "@itwin/authorization-base": "workspace:*",
    "openid-client": "^4.9.0"
  },
  "devDependencies": {
    "@bentley/build-tools": "^3.0.0-dev.69",
    "@bentley/eslint-plugin": "^3.0.0-dev.69",
    "@bentley/oidc-signin-tool": "^3.0.0-dev.69",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^8.2.3",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "typescript": "~4.3.5"
  },
  "eslintConfig": {
    "plugins": [
      "@bentley"
    ],
    "extends": "plugin:@bentley/imodeljs-recommended",
    "rules": {
      "@bentley/no-internal-barrel-imports": [
        "error",
        {
          "ignored-barrel-modules": [
            "./src/index.ts"
          ]
        }
      ]
    }
  }
}
