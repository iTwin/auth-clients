{
  "$schema": "https://developer.microsoft.com/json-schemas/rush/v5/rush.schema.json",
  "rushVersion": "5.83.1",
  "pnpmVersion": "6.35.1",
  "nodeSupportedVersionRange": "^18.0.0",
  "projectFolderMinDepth": 2,
  "projectFolderMaxDepth": 3,
  "ensureConsistentVersions": false,
  "pnpmOptions": {
    "useWorkspaces": true
  },
  "gitPolicy": {
    "allowedEmailRegExps": [
      "[^@]+@users\\.noreply\\.github\\.com"
    ],
    "sampleEmail": "mrexample@users.noreply.github.com"
  },
  "repository": {
    "url": "https://github.com/iTwin/auth-clients",
    "defaultBranch": "main",
    "defaultRemote": "origin"
  },
  "projects": [
    {
      "packageName": "@itwin/browser-authorization",
      "projectFolder": "packages/browser",
      "shouldPublish": true,
      "versionPolicyName": "individual-versioning"
    },
    {
      "packageName": "@itwin/electron-authorization",
      "projectFolder": "packages/electron",
      "shouldPublish": true,
      "versionPolicyName": "individual-versioning"
    },
    {
      "packageName": "@itwin/base-openid-client",
      "projectFolder": "packages/base-openid-client",
      "shouldPublish": true,
      "versionPolicyName": "individual-versioning"
    },
    {
      "packageName": "@itwin/service-authorization",
      "projectFolder": "packages/service",
      "shouldPublish": true,
      "versionPolicyName": "individual-versioning"
    },
    {
      "packageName": "@itwin/node-cli-authorization",
      "projectFolder": "packages/node-cli",
      "shouldPublish": true,
      "versionPolicyName": "individual-versioning"
    },
    {
      "packageName": "@itwin/oidc-signin-tool",
      "projectFolder": "packages/oidc-signin-tool",
      "shouldPublish": true,
      "versionPolicyName": "individual-versioning"
    }
  ]
}